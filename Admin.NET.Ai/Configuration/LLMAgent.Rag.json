{
    "$schema": "https://gitee.com/dotnetchina/Furion/raw/v4/schemas/v4/furion-schema.json",
    "LLM-Rag": {
        "VectorDatabase": {
            "Type": "InMemory",
            "ConnectionString": "",
            "CollectionName": "knowledge_base"
        },
        "Embedding": {
            "Provider": "AliyunBailian",
            "Model": "text-embedding-v3",
            "Dimension": 1024,
            "ApiKey": "sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
            "BaseUrl": "https://dashscope.aliyuncs.com/compatible-mode/v1"
        },
        "Rerank": {
            "Provider": "AliyunBailian",
            "Model": "bge-reranker-v2",
            "ApiKey": "sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
            "BaseUrl": "https://dashscope.aliyuncs.com/compatible-mode/v1",
            "TopK": 3,
            "ScoreThreshold": 0.2
        },
        "Retrieval": {
            "TopK": 5,
            "SimilarityThreshold": 0.7,
            "ChunkSize": 1000,
            "ChunkOverlap": 200
        }
    },
    "LLM-GraphRag": {
        "GraphDatabase": {
            "Type": "Neo4j",
            "ConnectionString": "bolt://localhost:7687",
            "Username": "neo4j",
            "Password": "neo4j-password"
        },
        "Schema": {
            "NodeTypes": [
                "Entity",
                "Concept",
                "Event"
            ],
            "RelationTypes": [
                "RELATED_TO",
                "PART_OF",
                "OCCURRED_AT"
            ]
        },
        "Ingestion": {
            "LLMProvider": "DeepSeek",
            "PromptTemplate": "graph-ingestion",
            "BatchSize": 50,
            "MaxConcurrency": 4
        },
        "Query": {
            "MaxDepth": 3,
            "ExpandRelations": true,
            "HybridFusion": true,
            "AnswerSynthesisModel": "qwen-plus"
        }
    }
}