{
    // 内容安全配置 - 支持热更新，修改后自动生效
    "ContentSafety": {
        // 是否启用
        "Enabled": true,
        // 是否检查输入/输出
        "CheckInput": true,
        "CheckOutput": true,
        // 流式输出缓冲区大小 (最长敏感词长度)
        "StreamBufferSize": 15,
        // 默认掩码 (当替换词为 null 时使用)
        "DefaultMask": "***",
        // ============================================================
        // 精确敏感词替换规则 (精确匹配)
        // 格式: "敏感词": "替换词"   或   "敏感词": null (使用默认掩码)
        // ============================================================
        "SensitiveWords": {
            // === 脏话/骂人词替换示例 ===
            "废物": "法王",
            "垃圾": "垃🐔",
            "文字狱": "文字🉐狱",
            // === 测试用 ===
            "测试敏感词": "已和谐"
        },
        // ============================================================
        // 正则敏感词模式 (匹配变体，如 傻-逼、傻*逼、傻 逼 等)
        // 支持热更新：修改后自动生效 可以往里面随时添加
        // 正则语法: [\s\-\*_\.·]* 匹配任意数量的空格/符号
        // ============================================================
        "SensitiveWordPatterns": {
            // 匹配: 傻逼、傻-逼、傻*逼、傻 逼、傻.逼、傻—逼 等变体
            "法王变体": {
                "Pattern": "法[\\s\\-\\*_\\.·—]*王",
                "Replacement": "法王"
            },
            // 匹配: 狗日的、狗-日-的 等变体
            "tmd变体": {
                "Pattern": "他[\\s\\-\\*_\\.·—]*妈[\\s\\-\\*_\\.·—]*的",
                "Replacement": "***"
            }
        },
        // ============================================================
        // PII 脱敏规则 (正则匹配)
        // ============================================================
        "PiiRules": {
            "手机号": {
                "Pattern": "1[3-9]\\d{9}",
                "Replacement": "1**********"
            },
            "身份证": {
                "Pattern": "\\d{17}[\\dXx]",
                "Replacement": "****"
            },
            "邮箱": {
                "Pattern": "[\\w.-]+@[\\w.-]+\\.\\w+",
                "Replacement": "****@****.***"
            },
            "银行卡": {
                "Pattern": "\\d{16,19}",
                "Replacement": "****"
            }
        },
        // 是否启用 PII 脱敏
        "EnablePiiMasking": true,
        // 违规处理方式: Replace | Block | LogOnly
        "ViolationAction": "Replace",
        // 拦截时的提示消息
        "BlockMessage": "抱歉，该内容包含违规信息，无法显示。"
    }
}