{
    "$schema": "https://gitee.com/dotnetchina/Furion/raw/v4/schemas/v4/furion-schema.json",
    "LLM-AgentWorkflow": {
        "Enabled": true,
        "WorkflowPath": "./workflows",
        "MaxSteps": 50,
        "TimeoutSeconds": 300,
        "EnableParallelExecution": false,
        "MaxParallelTasks": 3,
        "Toolchain": {
            "AvailableTools": [
                "web_search",
                "code_executor",
                "file_reader",
                "database_query"
            ],
            "ToolConfigs": {
                "web_search": {
                    "max_results": 10,
                    "timeout": 30
                },
                "code_executor": {
                    "timeout": 60,
                    "sandbox": true
                }
            },
            "EnableAutoDiscovery": true
        }
    },
    "LLM-Document": {
        "Parser": {
            "SupportedFormats": [
                "pdf",
                "docx",
                "txt",
                "md",
                "html",
                "xlsx",
                "pptx"
            ],
            "MaxFileSizeMB": 100,
            "EnableOcr": false,
            "OcrProvider": "Tesseract",
            "OcrConfig": {
                "language": "chi_sim+eng",
                "psm": 6
            }
        },
        "Preprocess": {
            "EnableTextCleaning": true,
            "EnableDeduplication": true,
            "EnableLanguageDetection": true,
            "EnableSensitiveInfoFilter": false
        },
        "Storage": {
            "Type": "Local",
            "Path": "./documents",
            "EnableVersionControl": true,
            "Config": {
                "compression": true,
                "encryption": false
            }
        }
    },
    "LLM-CostControl": {
        "Enabled": true,
        "Token": {
            "DailyLimit": 10000000,
            "MonthlyLimit": 100000000,
            "TotalLimit": 0
        },
        "Budget": {
            "DailyLimit": 1000,
            "MonthlyLimit": 30000,
            "TotalLimit": 0
        },
        "RateLimiting": {
            "MaxRequestsPerMinute": 60,
            "MaxConcurrentRequests": 10,
            "TokensPerSecond": 10,
            "BucketCapacity": 100
        },
        "OverBudgetApproval": {
            "Enabled": false,
            "MaxApprovalAmount": 500,
            "ApprovalExpiryHours": 24,
            "RequireApproval": true
        },
        "Alerts": {
            "Enabled": true,
            "Threshold": 0.8,
            "Email": "admin@example.com"
        }
    },
    "LLM-Capabilities": {
        "FunctionCalling": {
            "Enabled": true,
            "SafetyGuard": {
                "Provider": "AzureOpenAI",
                "Model": "gpt-5-mini-moderation"
            }
        },
        "Vision": {
            "Provider": "GPT4",
            "Model": "gpt-4o-mini",
            "MaxImageSizeMB": 5
        },
        "Caching": {
            "Provider": "Redis",
            "ConnectionString": "localhost:6379",
            "DefaultTtlSeconds": 600
        },
        "Telemetry": {
            "Enabled": true,
            "Sink": "OpenTelemetry",
            "Endpoint": "http://localhost:4318"
        }
    }
}